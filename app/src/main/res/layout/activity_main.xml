<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/headimage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:translationY="-1000dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/scan">

    </ImageView>

    <TextView
        android:id="@+id/headtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headimage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:gravity="center"
        android:padding="4dp"
        android:text="SCAN AND GO"
        android:textAlignment="center"
        android:textColor="#65B22E"
        android:textSize="32sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/headtext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headtext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:gravity="center"
        android:padding="4dp"
        android:text="Your one stop destination to all scanning needs"
        android:textAlignment="center"
        android:textColor="#65B22E"
        android:textSize="22sp"
        android:textStyle="bold">

    </TextView>



</RelativeLayout>